{
  "manifest_version": 2,
  "name": "Serial Projector",
  "description": "Easily show last line of text got from serial port.",
  "version": "0.2",
  "author": "Victor Nakoryakov, Amperka LLC",
  "homepage_url": "https://github.com/amperka/serial-projector",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": { 
      "32": "img/icon32.png", 
      "48": "img/icon48.png", 
      "64": "img/icon64.png", 
      "128": "img/icon128.png" 
  },
  "permissions": [
      "serial",
      "fullscreen"
  ]
}
